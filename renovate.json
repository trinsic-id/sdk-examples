{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "America/Indianapolis",
  "schedule": [
    "on Friday"
  ],
  "extends": [
    "group:allNonMajor"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["^trinsic"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"]
    },
    {
      "matchPackagePatterns": ["trinsic"],
      "schedule": ["every weekday"]
    }
  ],
  "prHourlyLimit": 20,
  "prConcurrentLimit": 0,
  "dependencyDashboard": true
}
